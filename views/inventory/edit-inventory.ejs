<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>

        <%- messages() %>
            <section class="form-container">
                <form class="login-register-form inventory-form" action="/inv/update" method="POST" id="updateForm">
                    <label for="classificationList">Classification</label>
                    <%- classificationSelect %>
                        <label for="inv_make">Make</label>
                        <input id="inv_make" name="inv_make" required minlength="3"
                            pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{2,}$"
                            title="Mínimo 3 caracteres. Solo letras, números, espacios y guiones."
                            value="<%= inv_make ? inv_make : '' %>" placeholder="Min of 3 Characters">

                        <label for="inv_model">Model</label>
                        <input id="inv_model" name="inv_model" required minlength="3"
                            pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{2,}$"
                            title="Mínimo 3 caracteres. Solo letras, números, espacios y guiones."
                            value="<%= inv_model ? inv_model : '' %>" placeholder="Min of 3 Characters">

                        <label for="inv_description">Description</label>
                        <textarea id="inv_description" name="inv_description" required minlength="10"
                            placeholder="Brief description (min 10 chars)"
                            rows="4"><%= inv_description ? inv_description : '' %></textarea>

                        <label for="inv_image">Image Path</label>
                        <input id="inv_image" name="inv_image" required
                            pattern="^\/images\/vehicles\/.+\.(png|jpg|jpeg|webp)$"
                            title="Ruta que comience con /images/vehicles/ y termine en .png, .jpg, .jpeg o .webp"
                            value="<%=  inv_image ? inv_image : '/images/vehicles/no-image.png' %>"
                            placeholder="/images/vehicles/archivo.png">

                        <label for="inv_thumbnail">Thumbnail Path</label>
                        <input id="inv_thumbnail" name="inv_thumbnail" required
                            pattern="^\/images\/vehicles\/.+\.(png|jpg|jpeg|webp)$"
                            title="Ruta que comience con /images/vehicles/ y termine en .png, .jpg, .jpeg o .webp"
                            value="<%=  inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
                            placeholder="/images/vehicles/archivo-tn.png">

                        <label for="inv_price">Price</label>
                        <input id="inv_price" name="inv_price" required inputmode="decimal"
                            pattern="^\d+(?:\.\d{1,2})?$"
                            title="Número entero o decimal con punto (ej: 12000 o 12000.99)"
                            value="<%= inv_price ? inv_price : '' %>" placeholder="Decimal or integer">

                        <label for="inv_year">Year</label>
                        <input id="inv_year" name="inv_year" required type="number" min="1950" max="2099"
                            title="Año de 4 dígitos entre 1950 y 2099 (ej: 2020)."
                            value="<%= inv_year ? inv_year : '' %>" placeholder="4-digit year">

                        <label for="inv_miles">Miles</label>
                        <input id="inv_miles" name="inv_miles" required type="number" min="0" step="1"
                            title="Solo dígitos (ej: 65000)." value="<%=  inv_miles  ? inv_miles : '' %>"
                            placeholder="Digits only">

                        <label for="inv_color">Color</label>
                        <input id="inv_color" name="inv_color" required value="<%= inv_color ? inv_color : '' %>">
                        <button type="submit" disabled>Update Vehicle</button>
                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                            <% } %>>
                </form>
            </section>

            <script src="../../js/inv-update.js"></script>