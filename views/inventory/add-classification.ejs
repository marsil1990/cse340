<% if (title) { %>
    <h1>
        <%= title %>
    </h1>

    <% } %>
        <%- messages() %>
            <section class="form-container">
                <form id="classification" class="classification-form" action="/inv/new-classification" method="POST">

                    <label for="classification_name">Classification Name:</label>
                    <p>NAME MUST BE ALPHABETIC CHARACTERS ONLY</p>
                    <input type="text" id="classification_name" name="classification_name" required
                        value="<%= locals.classification_name  %>" pattern="^[A-Za-z0-9]+$"
                        title="Only letters and numbers. No spaces or special characters.">
                    <button type="submit">Add Classification</button>

                </form>
            </section>